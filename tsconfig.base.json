{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@eddie-workspace/react-echarts": [
        "libs/react-echarts/src/index.ts"
      ],
      "@eddie-workspace/react-media-player": [
        "libs/react-media-player/src/index.ts"
      ],
      "@eddie-workspace/react-code-editor": [
        "libs/src/index.ts"
      ],
      "@eddie-workspace/code-editor": [
        "code-editor-temp/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
